<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginTestActivity">

    <!-- Frame 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameInitial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:visibility="visible">

        <!-- App-Logo -->
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_marginTop="128dp"
            android:contentDescription="@string/logo_beschreibung"
            android:src="@mipmap/family"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textLoginFunktioniert"
            style="@style/BoldTextStyle"
            android:layout_width="321dp"
            android:layout_height="55dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="@string/loginFunktioniert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageLogo" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>