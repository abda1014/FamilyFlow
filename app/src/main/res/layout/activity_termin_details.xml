<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/terminname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terminname"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/beschreibung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/beschreibung"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/datum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/datum"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonTerminBearbeiten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bearbeiten"
            android:backgroundTint="@color/brown1"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonTerminLoeschen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loeschen"
            android:backgroundTint="@color/brown1"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
